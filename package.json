{
  "name": "optionspricingdsl-vscode-extension",
  "displayName": "OptionsPricingDSL VS Code Extension",
  "description": "Syntax highlighting, code completion, and option pricing preview for OptionsPricingDSL .dsl files.",
  "version": "1.0.0",
  "publisher": "your-name",
  "engines": {
    "vscode": ">=1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:optionspricingdsl",
    "onCommand:optionspricingdsl.previewPricing"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "optionspricingdsl",
        "aliases": [
          "OptionsPricingDSL",
          "optionspricingdsl"
        ],
        "extensions": [
          ".dsl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "optionspricingdsl",
        "scopeName": "source.optionspricingdsl",
        "path": "./syntaxes/optionspricingdsl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "optionspricingdsl.previewPricing",
        "title": "OptionsPricingDSL: Preview Pricing"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^14.18.63",
    "mocha": "^11.7.2",
    "typescript": "^4.0.0",
    "vscode": "^1.1.37"
  }
}
